<Alloy>
	<Collection id="patologias" src="InfoPatologia" instance="true" />
	<Window id="winListaPatologia" class="janela" backgroundColor="#f1f1f1" >
		<Widget src="GUI" id="minhaTopBar" name="Topbar" />
		<View id="mestre">
			<TableView id="minhaListaPatologia" dataCollection="$.patologias" dataTransform="formatar" backgroundColor="transparent" 
				onClick="detalhar" >
				<TableViewRow class="RowDetail" className="ListaPatologiaRow" modelo="{Id}" backgroundColor="transparent" >
					<View class="shadowView" layout="vertical" width="95%" height="Ti.UI.SIZE" top="5">
						<Label text="{LblNumero}" class="tituloRowLista descricaoTitulo" /> 
						<Label text="{Observacao}" class="tituloRowLista descricaoTitulo" /> 
						<View height="5" />
					</View>
				</TableViewRow>
			</TableView>
		</View>
	</Window>  
</Alloy>