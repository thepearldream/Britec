<Alloy>
	<Window class="janela" id="winAbastecimento">
		<Widget src="GUI" id="minhaTopBar" name="Topbar" />
		<ScrollView id="boxConteudo"> 
			<View height="Ti.UI.SIZE" top=5>
				<Widget src="GUI" name="DateInput" id="data" />
			</View>
			<View height="Ti.UI.SIZE" top=5>
				<Widget src="GUI" name="ComboBox" id="veiculos" />
			</View>
			<View height="Ti.UI.SIZE" top=5>
				<Widget src="GUI" name="LblTextField" id="horimetro" />
			</View>
			<View height="5" />
			<Widget src="GUI" name="RadioGroup" height="Ti.UI.SIZE" width="90%" id="grpCombustivel" 
				titulo="Tipo de abastecimento" onChange="alteraAbastecimento" />
			<View height="Ti.UI.SIZE" top=5>
				<Widget src="GUI" name="LblTextField" id="quantidade" />
			</View>
			<View id="boxDesc">
				<Widget src="GUI" name="LblTextBox" id="observacao" />
			</View>
			<View height="10" />
		</ScrollView>
	</Window>
</Alloy>